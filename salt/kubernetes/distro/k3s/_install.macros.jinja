{% macro k3s_install(installer_url, envs_list) %}
k3s:
  cmd.script:
    - name: {{ installer_url }}
    - env: {{ envs_list | tojson }}
    - require:
      - file: k3s_config

k3s-running:
  service.running:
    - name: {{ k3s.config.unit_name }}
    - enable: True
    - require:
      - cmd: k3s

{% endmacro %}
